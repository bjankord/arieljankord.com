<!doctype html>
<html {% if section %} data-current="{{ section }}"{% endif %} lang="en" class="no-js">

	{% include "components/head.njk" %}

	<body>
		<div class="site">
		<header class="site-header">
			<a class="logo" href="{{ '/' | url }}">
				{% include "components/logo.njk" %}
				<span class="visually-hidden">{{ metadata.title }}</span>
			</a>
			<div class="site-nav-container">
				<button class="site-nav-toggle-btn site-nav-toggle-btn--open">
					<svg height="512" viewBox="0 0 512 512" width="512" xmlns="http://www.w3.org/2000/svg"><path d="m464.883 64.267h-417.766c-25.98 0-47.117 21.136-47.117 47.149 0 25.98 21.137 47.117 47.117 47.117h417.766c25.98 0 47.117-21.137 47.117-47.117 0-26.013-21.137-47.149-47.117-47.149z"/><path d="m464.883 208.867h-417.766c-25.98 0-47.117 21.136-47.117 47.149 0 25.98 21.137 47.117 47.117 47.117h417.766c25.98 0 47.117-21.137 47.117-47.117 0-26.013-21.137-47.149-47.117-47.149z"/><path d="m464.883 353.467h-417.766c-25.98 0-47.117 21.137-47.117 47.149 0 25.98 21.137 47.117 47.117 47.117h417.766c25.98 0 47.117-21.137 47.117-47.117 0-26.012-21.137-47.149-47.117-47.149z"/></svg>
					<span class="visually-hidden">Open Nav</span>
				</button>
				{% include "components/nav.njk" %}
			</div>
		</header>

		<main id="main" class="site-body">
			{{ layoutContent | safe }}
		</main>
		</div>
		<script src="/_includes/assets/js/nav.js"></script>
	</body>

</html>
